<%= simple_form_for(article) do |f| %>
  <div class="form-inputs">
    <%= f.input :title, required: true %>
    <%= f.input :description, as: :text, required: true, hint: '250 characters max' %>
    <%= f.input :photo, required: true, as: :file %>
  </div>

  <!-- insert these three line of code below -->
  <div class="form-inputs">
    <%= f.rich_text_area :rich_body %>
  </div>

  <hr>
  <div class="form-actions">
    <%= f.button :submit, class: 'btn-main' %>
  </div>
<% end %>
