<div class="container d-flex justify-content-center">
  <div class="col-xs-12 col-md-4 col-sm-offset-4">
    <h2>Sign up</h2>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs mt-3">
        <%= f.input :first_name,
                    placeholder: 'John',
                    required: true %>
        <%= f.input :last_name,
                    placeholder: 'Doe',
                    required: true %>
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    placeholder: 'john.doe@gmail.com',
                    input_html: { autocomplete: "email" }%>
        <%= f.input :password,
                    required: true,
                    placeholder: '******',
                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                    input_html: { autocomplete: "new-password" } %>
        <%= f.input :password_confirmation,
                    required: true,
                    placeholder: '******',
                    input_html: { autocomplete: "new-password" } %>
        <%= f.input :photo,
                    as: :file,
                    label: 'Avatar',
                    hint: 'Add a picture of you' %>
        <%= f.input :description,
                    required: true,
                    input_html: { style: 'height: 150px;' },
                    placeholder: 'Who are you, what country do you come from, what languages do you speak, why do you want to learn French, what do you want to improve, what are your passions in life...',
                    hint: "Write a short description about yourself." %>
        <%= f.input :birth_date,
                    default: Date.parse('1990-01-01'),
                    start_year: Date.today.year - 90,
                    end_year: Date.today.year - 12,
                    required: true %>
        <%= f.input :country,
                    hint: 'Your country of origin',
                    required: true %>
        <%= f.input :level,
                    as: :radio_buttons,
                    collection: User::LEVEL,
                    hint: "A0: I never took French lessons before. C2: I am bilingual.",
                    required: true %>
      </div>

      <div class="form-actions">
        <!-- <p>By registering to our club, you agree with <%#= link_to "membership rules", rules_path %>.</p> -->
        <%= f.button :submit, "Sign up", class: 'btn-main' %>
      </div>
    <% end %>

    <hr>
    <%= render "devise/shared/links" %>
  </div>
</div>

